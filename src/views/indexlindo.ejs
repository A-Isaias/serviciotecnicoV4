				data: {
					nombre: nombre,
					telefono: telefono,
					tipo: tipo,
					marca: marca,
					modelo: modelo,
					num_serie: num_serie,
					accesorios: accesorios,
					tareas: tareas
				},
				success: function(response) {
					alert(response); // Muestra una alerta con la respuesta del servidor
				}
			});
		}

